<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="700.0" style="-fx-border-radius: 20; -fx-border-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.ModifyProductController">
    <children>
        <Label layoutX="46.0" layoutY="50.0" text="Modify Product">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="idLbl" layoutX="80.0" layoutY="100.0" text="ID" />
        <Label fx:id="nameLbl" layoutX="80.0" layoutY="140.0" text="Name" />
        <Label fx:id="invLbl" layoutX="80.0" layoutY="180.0" text="Inv" />
        <Label fx:id="priceLbl" layoutX="80.0" layoutY="220.0" text="Price" />
        <Label fx:id="maxLbl" layoutX="80.0" layoutY="260.0" text="Max" />
        <Label fx:id="minLbl" layoutX="80.0" layoutY="300.0" text="Min" />
        <TextField fx:id="idField" layoutX="118.0" layoutY="96.0" />
        <TextField fx:id="nameField" layoutX="118.0" layoutY="136.0" />
        <TextField fx:id="invField" layoutX="118.0" layoutY="176.0" />
        <TextField fx:id="priceField" layoutX="118.0" layoutY="216.0" />
        <TextField fx:id="maxField" layoutX="118.0" layoutY="256.0" />
        <TextField fx:id="minField" layoutX="118.0" layoutY="296.0" />
        <TableView fx:id="modProductTable" layoutX="296.0" layoutY="85.0" prefHeight="270.0" prefWidth="390.0">
            <placeholder>
                <Label text="No Data is found! Add or Search the correct name." />
            </placeholder>
            <columns>
                <TableColumn fx:id="modIDColumn" prefWidth="75.0" text="Part ID" />
                <TableColumn fx:id="modNameColumn" prefWidth="75.0" text="Part Name" />
                <TableColumn fx:id="modCountColumn" prefWidth="110.0" text="Inv Count" />
                <TableColumn fx:id="modPriceCostColumn" prefWidth="130.0" text="Price/Cost per Unit" />
            </columns>
        </TableView>
        <TableView fx:id="modProductTable2" layoutX="296.0" layoutY="400.0" prefHeight="270.0" prefWidth="390.0">
            <placeholder>
                <Label text="No Parts Added." />
            </placeholder>
            <columns>
                <TableColumn fx:id="modIDColumn2" prefWidth="75.0" text="Part ID" />
                <TableColumn fx:id="modNameColumn2" prefWidth="75.0" text="Part Name" />
                <TableColumn fx:id="modCountColumn2" prefWidth="110.0" text="Inv Count" />
                <TableColumn fx:id="modPriceCostColumn2" prefWidth="130.0" text="Price/Cost per Unit" />
            </columns>
        </TableView>
        <TextField fx:id="modProductSearchBox" layoutX="537.0" layoutY="46.0" promptText="Search by ID/Name" />
        <Button fx:id="modSaveBtn" layoutX="517.0" layoutY="731.0" mnemonicParsing="false" onAction="#saveMPro" text="Save" />
        <Button fx:id="modCancelButton" layoutX="563.0" layoutY="731.0" mnemonicParsing="false" onAction="#cancelMPro" text="Cancel" />
        <Button fx:id="removeBtn" layoutX="465.0" layoutY="700.0" mnemonicParsing="false" onAction="#removeMPro" prefHeight="25.0" prefWidth="150.0" text="Remove Associated Part" />
      <Button fx:id="addBtn" layoutX="570.0" layoutY="365.0" mnemonicParsing="false" onAction="#addMPro" text="Add" />
      <Button fx:id="modSearchBtn" layoutX="465.0" layoutY="46.0" mnemonicParsing="false" onAction="#searchMPro" text="Search" />
    </children>
</AnchorPane>
